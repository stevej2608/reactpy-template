  "version": "0.2.0",
  "configurations": [
    {
      "name": "1a. app.py",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/app.py",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": "Uvicorn running on\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },  
  ]

}